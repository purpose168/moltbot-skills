{
  "comment": "将此配置添加到 ~/.clawdbot/clawdbot.json 中以配置 telegram-usage 技能",
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "在这里替换为你的机器人令牌",
      "customCommands": [
        {
          "command": "usage",
          "description": "显示会话使用统计"
        },
        {
          "command": "stats",
          "description": "显示配额和令牌使用情况"
        }
      ]
    }
  },
  "skills": {
    "entries": {
      "telegram-usage": {
        "enabled": true
      }
    }
  },
  "session": {
    "reset": {
      "mode": "daily",
      "atHour": 4,
      "idleMinutes": null
    }
  }
}
