{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Web Search Plus configuration â€” customize defaults, auto-routing, and provider settings",
  
  "defaults": {
    "provider": "serper",
    "max_results": 5
  },
  
  "auto_routing": {
    "enabled": true,
    "fallback_provider": "serper",
    "provider_priority": ["serper", "tavily", "exa"],
    "disabled_providers": [],
    "keyword_mappings": {
      "serper": [
        "price", "buy", "shop", "shopping", "cost", "deal", "sale", "purchase",
        "cheap", "expensive", "store", "product", "review", "specs", "specification",
        "where to buy", "near me", "local", "restaurant", "hotel", "weather",
        "news", "latest", "breaking", "map", "directions", "phone number",
        "compare prices", "best deal", "discount", "coupon", "order online"
      ],
      "tavily": [
        "how does", "how to", "explain", "research", "what is", "why does",
        "analyze", "compare", "study", "academic", "detailed", "comprehensive",
        "in-depth", "understand", "learn", "tutorial", "guide", "overview",
        "history of", "background", "context", "implications", "pros and cons",
        "definition of", "meaning of", "difference between", "benefits of"
      ],
      "exa": [
        "similar to", "companies like", "find sites like", "alternatives to",
        "competitors", "like", "startup", "github", "paper", "research paper",
        "arxiv", "pdf", "academic paper", "similar pages", "related sites",
        "who else", "other companies", "comparable to", "YC company",
        "Series A", "Series B", "funded startup", "AI company"
      ]
    }
  },
  
  "serper": {
    "country": "us",
    "language": "en",
    "type": "search",
    "autocorrect": true,
    "include_images": false
  },
  
  "tavily": {
    "depth": "basic",
    "topic": "general",
    "include_images": false,
    "include_raw_content": false,
    "include_domains": [],
    "exclude_domains": []
  },
  
  "exa": {
    "type": "neural",
    "category": null,
    "include_domains": [],
    "exclude_domains": []
  }
}
