{
  "name": "clawdlink",
  "version": "1.0.0",
  "description": "Clawdbot 端到端加密消息系统",
  "author": "Dave Morin",
  
  "entrypoints": {
    "handler": "./handler.js",
    "heartbeat": "./heartbeat.js",
    "cli": "./cli.js"
  },
  
  "heartbeat": {
    "enabled": true,
    "script": "./heartbeat.js",
    "description": "轮询中继服务器获取消息和好友请求"
  },
  
  "setup": {
    "required": true,
    "script": "./cli.js setup",
    "instructions": "运行：clawdlink setup \"您的名称\""
  },
  
  "triggers": [
    "clawdlink",
    "好友链接", 
    "添加好友",
    "发送消息给",
    "告诉*说",
    "来自*的消息",
    "接受好友请求"
  ],
  
  "dependencies": {
    "relay": "https://clawdlink-relay.vercel.app"
  }
}
