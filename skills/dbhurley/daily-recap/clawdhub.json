{
  "name": "daily-recap",
  "version": "1.0.1",
  "summary": "生成每日回顾图像，您的助手手持写有成就的海报板",
  "description": "一个由 Cron 驱动的技能，它会查看助手的每日记忆文件和成就，然后生成一张自定义图像，显示助手手持写有当日胜利的海报板。包括适合天气的着装和根据当前条件的一天中时间光照。",
  "author": "dbhurley",
  "license": "MIT",
  "keywords": [
    "daily",
    "recap",
    "summary",
    "image",
    "posterboard",
    "accomplishments",
    "cron",
    "weather"
  ],
  "dependencies": {
    "skills": ["nano-banana-pro"]
  },
  "config": {
    "env": {
      "RECAP_LOCATION": {
        "description": "天气查询位置（例如：'北京, 中国'）",
        "required": true
      },
      "RECAP_CHAT_ID": {
        "description": "图像传递的聊天 ID",
        "required": true
      },
      "RECAP_TIME": {
        "description": "每日 Cron 的时间（24 小时格式）",
        "required": false,
        "default": "17:00"
      }
    }
  },
  "repository": "https://github.com/clawdbot/clawdbot",
  "homepage": "https://clawdhub.com/skills/daily-recap"
}
